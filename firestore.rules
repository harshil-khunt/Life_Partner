rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User journal entries - only accessible by the owner
    match /users/{userId}/journalEntries/{entryId} {
      // Allow read if user is the owner
      allow read: if isOwner(userId);
      
      // Allow create if user is authenticated and creating in their own collection
      allow create: if isOwner(userId) 
                    && request.resource.data.keys().hasAll(['text', 'createdAt'])
                    && request.resource.data.text is string
                    && request.resource.data.text.size() > 0;
      
      // Allow update if user is the owner
      allow update: if isOwner(userId);
      
      // Allow delete if user is the owner
      allow delete: if isOwner(userId);
    }
    
    // User goals - only accessible by the owner
    match /users/{userId}/goals/{goalId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && request.resource.data.title is string
                    && request.resource.data.title.size() > 0;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User habits - only accessible by the owner
    match /users/{userId}/habits/{habitId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && request.resource.data.title is string
                    && request.resource.data.title.size() > 0;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User chat sessions - only accessible by the owner
    match /users/{userId}/chatSessions/{sessionId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && request.resource.data.createdAt != null;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User metadata/profile (if you add this later)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
